<article class="c-card">
  <a href="<%= initiatives_show_path(news.record_type, news.slug, { entity: news.record_type }) %>" alt="<%= news.title %>">
    <div class="picture" style="background-image: url(<%= news.image %>)"></div>
  </a>
  <div class="metadata">
    <h4 class="title -dark -regular"><%= news.title %></h4>
    <p><%= news.summary %></p>
  </div>
  <footer class="footer">
    <h4 class="date"><%= DateHelper.beautify news.date %></h4>
    <%= link_to news.category.name, initiatives_filter_index_path(news.record_type),
    class: "subcategory" %>
  </footer>
</article>



