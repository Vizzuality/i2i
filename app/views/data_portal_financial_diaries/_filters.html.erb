<div class="c-radio-filters">
  <%= form_tag do %>
    <ul class="filters">
      <% @categories.each do |category| %>
        <li class="filteritem">
          <label class="filtercontrol">
            <input type="checkbox" name="category" value="<%= category[:name] %>" class="filterinput">
            <span class="filterindicator"></span>
            <span class="filterlabel js-category-menu"><%= category[:name] %></span>
          </label>
          <ul class="c-filter-list">
            <%# Default "all" option for all categories %>
            <li class="filterlistitem">
              <span
                class="js-category-option"
                data-parent="<%= category[:name] %>"
              >
                All <%= category[:name] %>
              </span>
            </li>
            <% category[:children].each do |children| %>
              <li class="filterlistitem">
                <span
                  class="itemtitle js-category-option"
                  data-parent="<%= category[:name] %>"
                  data-category="<%= children[:name] %>"
                >
                  <%= children[:name] %>
                </span>
              </li>
            <% end %>
          </ul>
        </liv>
      <% end %>
    </ul>
  <% end %>
</div>
