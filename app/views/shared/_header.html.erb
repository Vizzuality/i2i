<% isLarge ||= false %>

<div class="c-header <% if isCover.present? %>-cover<% end %> <% if isLarge %>-large<% end %>">
  <div class="container">
  	<div class="app-logo">
  		<%= link_to image_tag('/i2i-logo.svg', :alt => 'insight2impact'), root_path %>
  	</div>
    <nav class="c-nav" role="navigation">
      <ul class="nav-list">
    		<li class="nav-item <% if controller.controller_name == 'data_portal' || controller.controller_name == 'report' %>-current <% end %>">
          <%= link_to 'Data portal', data_portal_path %>
        </li>
    		<li class="nav-item <% if current_page?(updates_path) || controller.controller_name == 'news' || controller.controller_name == 'events' || controller.controller_name == 'blogs' %> -current <% end%>">
          <%= link_to 'News', updates_path %>
        </li>
    		<li class="nav-item <% if current_page?(libraries_path) %> -current <% end%>">
          <%= link_to 'Resources', libraries_path %>
        </li>
    		<li class="nav-item <% if current_page?(community_path) %> -current <% end%>">
          <%= link_to 'Community', community_path %>
        </li>
    		<li class="nav-item <% if current_page?(about_path) %> -current <% end%>">
          <%= link_to 'About', about_path %>
        </li>
      </ul>
    </nav>

    <button class="hamburguer js-btn-mobile-menu">
      <span class="ingredient"></span>
      <span class="ingredient"></span>
      <span class="ingredient"></span>
    </button>

  </div>
</div>
