<!-- Image header -->
<% unless blog.image.blank? %>
  <div class="l-image" style="background-image: url(<%= blog.image.url(:original) %>)"></div>
<% end %>

<div class="l-content">
  <div class="l-article">
    <%= render partial: 'shared/social-nav', locals: { title: blog.title } %>
    <div class="wrapper">
      <div class="row">
        <div class="grid-s-12">
          <article class="c-article">
            <div class="wrapper">
              <div class="row">
                <header>
                  <div class="container">
                    <div class="grid-s-12">
                      <%= link_to 'Blog', insights_filter_index_path('blogs'), :class => 'index-link _no-mobile' %>
                      <h1 class="title -xbig -dark js-social-nav-title"><%= blog.title %></h1>
                      <span class="authorship <% unless blog.workstream.blank? %> -has-workstream <% end %>">Written
                        <% unless blog.author.blank? %>
                          <% if blog.custom_author.present? %>
                            by <span class="author-name"><%= blog.author %></span>
                          <% else %>
                            by <%= link_to blog.author, about_path(:member => blog.author.parameterize), :class => 'author-name' %>
                          <% end %>
                        <% end %>
                        on <%= DateHelper.beautify blog.date %>
                      </span>

                      <% unless blog.workstream.blank? %>
                        <span class="workstream"><%= blog.workstream %></span>
                      <% end %>
                    </div>
                  </div>
                </header>
              </div>
              <section class="article-content js-social-nav-content">
                <%if blog.image.blank? != true %>
                  <div class="row">
                    <div class="grid-s-12">
                        <div class="article-image" style="background-image: url(<%= blog.image %>)"></div>
                    </div>
                  </div>
                <% end %>
                <div class="row article-text">
                  <div class="grid-s-12">
                    <%= blog.content.html_safe %>
                  </div>
                </div>
              </section>
            </div>
          </article>
        </div>
      </div>
    </div>

    <%if @related.any? %>
      <section class="l-related-section">
        <div class="wrapper">
          <h2 class="title -dark -big">Related content</h2>
          <div class="l-card-grid">
            <div class="row">
              <%= render partial: 'shared/cards', locals: { insights: @related, route: 'insights' }%>
              <% if @morePaginationAvailable %>
                <div class="grid-s-12">
                  <div class="grid-footer" id="show-more">
                    <%= link_to 'Show more', insights_show_path(blog.category.slug, blog.slug, { entity: blog.record_type, offset: @offset, anchor: 'show-more' }), :class => 'c-button -big -sea' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
