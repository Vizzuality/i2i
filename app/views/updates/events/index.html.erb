<% title 'Events' %>

<div class="l-keep-updated">

  <div class="l-header">
    <div class="wrapper">
      <%= render partial: 'shared/header', locals: { isCover: false } %>
    </div>
  </div>

  <div class="l-header-section">
    <div class="wrapper">
      <div class="row">
        <div class="container">
          <div class="grid-s-12 grid-m-6">
            <h2 class="title -dark -big -center">Events</h2>
            <p class="subtitle">Catch-up on where weâ€™ve been and what we are doing.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="wrapper">

      <div class="l-event-filters">
        <div class="row">
          <div class="grid-s-12">
            <div class="row">
              <div class="grid-s-12 grid-m-2">
                <button class="c-button js-event-filter-btn" data-filter="all">All Events</button>
              </div>
              <div class="grid-s-12 grid-m-2">
                <button class="c-button js-event-filter-btn" data-filter="upcoming">Upcoming Events</button>
              </div>
              <div class="grid-s-12 grid-m-2">
                <button class="c-button js-event-filter-btn" data-filter="past">Past Events</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="l-card-grid">
        <div class="row">
          <% @events.each do |event| %>
            <div class="grid-s-12 grid-m-6 grid-l-3 js-event" data-time="<%= DateHelper.setCronology event.date %>">
              <article class="c-card">
                <a href="<%= updates_event_path(event.id) %>" alt="<%= event.title %>">
                  <div class="picture" style="background-image: url(<%= event.image %>)"></div>
                  <div class="metadata">
                    <h4 class="title -dark -xs"><%= event.title %></h4>
                    <h4 class="title -sea -small"><%= DateHelper.beautify event.date %></h4>
                    <p><%= event.summary %></p>
                  </div>
                </a>
              </article>
            </div>
          <% end %>
          <div class="grid-s-12">
            <div class="grid-footer">
              <div class="grid-footer">
                <button class="c-button -big -sea js-btn-more">Show more</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
