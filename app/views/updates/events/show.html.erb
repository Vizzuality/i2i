<% title @event.title %>

<div class="l-details-page">

  <div class="l-header">
    <div class="wrapper">
      <%= render partial: 'shared/header', locals: { isCover: false } %>
    </div>
  </div>

  <div class="l-content">

    <div class="l-article">

      <div class="wrapper">

        <div class="row">

          <div class="grid-s-12">

            <article class="c-article">
              <div class="row">
                <header>
                  <div class="container">
                    <div class="grid-s-12 grid-l-8">
                      <%= link_to 'Events', updates_events_path, :class => 'index-link _no-mobile' %>
                      <h1 class="title -xbig -dark "><%= @event.title %></h1>
                      <span class="authorship">Written by <span class="author-name">Author</span>
                      on <%= DateHelper.beautify @event.date %></span>
                    </div>
                  </div>
                </header>
              </div>

              <section class="article-content">
                <%if @event.image.blank? != true %>
                  <div class="row">
                    <div class="grid-s-12">
                        <div class="article-image" style="background-image: url(<%= @event.image %>)"></div>
                    </div>
                  </div>
                <% end %>

                <div class="row">
                  <div class="article-text">
                    <div class="grid-s-12 grid-m-10 grid-l-8">
                      <p><%= @event.content %></p>
                    </div>
                  </div>
                </div>
              </section>
            </article>
          </div>
        </div>
      </div>
    </div>

    <section class="l-related-section">
      <div class="wrapper">
        <h2 class="title -dark -big">Related events</h2>
        <div class="l-card-grid">
          <div class="row">
            <% @RelatedEvents.each do |event| %>
              <div class="grid-s-12 grid-m-6 grid-l-3">
                <article class="c-card -small">
                  <div class="picture" style="background-image: url(<%= event.image %>)">
                    <%= link_to '', updates_event_path(event.id) %>
                  </div>
                  <div class="metadata">
                    <h4 class="title -dark -xs"><%= event.title %></h4>
                    <h4 class="title -sea -small"><%= DateHelper.beautify event.date %></h4>
                    <p><%= event.summary %></p>
                  </div>
                </article>
              </div>
            <% end %>
            <div class="grid-s-12">
              <div class="grid-footer">
                <div class="grid-s-12 grid-m-4 grid-l-3">
                  <%= link_to 'More events', updates_events_path, :class => 'c-button -sea' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    </div>
  </div>
</div>
