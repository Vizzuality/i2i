<% title 'Blog' %>

<div class="l-keep-updated">

  <div class="l-header">
    <div class="wrapper">
      <%= render partial: 'shared/header', locals: { isCover: false } %>
    </div>
  </div>

  <div class="l-header-section">
    <div class="wrapper">
      <div class="row">
        <div class="container">
          <div class="grid-s-12 grid-m-6">
            <h2 class="title -dark -big -center">Blog</h2>
            <p class="subtitle">Stay up to date with the latest thinking from us and our partners on how data can be used to advance financial inclusion.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="wrapper">
      <div class="l-card-grid">
        <div class="row">
          <% @blogs.each do |post| %>
            <div class="grid-s-12">
              <article class="c-card -horizontal">
                <a href="<%= updates_blog_path(post.slug) %>" alt="<%= post.title %>">
                  <div class="picture" style="background-image: url(<%= post.image %>)"></div>
                  <div class="metadata">
                    <h4 class="title -dark -xs"><%= post.title %></h4>
                    <h4 class="title -sea -small"><%= DateHelper.beautify post.date %></h4>
                    <p><%= post.summary %></p>
                  </div>
                </a>
              </article>
            </div>
          <% end %>
          <!--
          <div class="grid-s-12">
            <div class="grid-footer">
              <div class="grid-footer">
                <button class="c-button -big -sea js-btn-more">Show more</button>
              </div>
            </div>
          </div>
          -->
        </div>
      </div>
    </div>
  </div>
</div>
