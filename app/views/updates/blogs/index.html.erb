<% title 'Blog' %>

<div class="l-keep-updated">

  <div class="l-header">
    <div class="wrapper">
      <%= render partial: 'shared/header', locals: { isCover: false } %>
    </div>
  </div>

  <div class="l-header-section">
    <div class="wrapper">
      <div class="row">
        <div class="container">
          <div class="grid-s-12 grid-m-6">
            <h2 class="title -dark -big -center">Blog</h2>
            <p class="subtitle">Description text. Lorem ipsum sit amet ornare
              sem lacinia quam venenatis vestibulum.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="wrapper">
      <div class="l-card-grid">
        <div class="row">
          <% @blogs.each do |blog| %>
            <div class="grid-s-12">
              <article class="c-card -horizontal">
                <div class="picture" style="background-image: url(<%= blog.image %>)">
                  <%= link_to '', updates_blog_path(blog.id) %>
                </div>
                <div class="metadata">
                  <h4 class="title -dark -xs"><%= blog.title %></h4>
                  <% if blog.has_attribute? 'date' %>
                    <h4 class="title -sea -small"><%= blog.date %></h4>
                  <% end %>
                  <p><%= blog.summary %></p>
                </div>
              </article>
            </div>
          <% end %>
          <div class="grid-s-12">
            <div class="grid-footer">
              <div class="grid-s-12 grid-m-4 grid-l-3">
                <button class="c-button -sea js-btn-more">Show more</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
