<div class="filter-selection">
  <form action="#" name="apply-filter-form">
    <ul class="filter-list">
      <% indicators.forEach(function(ind) { %>
        <li class="filter-item">
          <span class="indicator-name"><%= ind.name %></span>
          <ul class="indicator-filters-list">
            <% ind.options.forEach(function(opt) { %>
              <li class="indicator-filters-item">
                <div class="c-checkbox">
                  <input type="checkbox" <% if(opt.filtered) { %> checked <% } %> value="<%= opt.name %>" id="<%= ind.id %>-<%= opt.name %>" class="js-option" data-indicator-id="<%= ind.id %>" data-indicator="<%= ind.name %>">
                  <label for="<%= ind.id %>-<%= opt.name %>"><%= opt.name %></label>
                </div>
              </li>
            <% }); %>
          </ul>
        </li>
      <% }); %>
    </ul>
  </form>
</div>
