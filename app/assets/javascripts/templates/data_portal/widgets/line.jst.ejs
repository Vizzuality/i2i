{
  "width": <%= width %>,
  "height": <%= height %>,
  "padding": "strict",
  "data": [
    {
      "name": "original",
      "values": <%= data %>
    },
    {
      "name": "count",
      "source": "original",
      "transform": [
        {"type": "aggregate", "summarize": {"label": "count"}}
      ]
    },
    {
      "name": "table",
      "source": "original",
      "transform": [
        {"type": "cross", "with": "count"},
        {
          "type": "formula",
          "field": "tickLimit",
          "expr": "datum.b.count_label < 6 ? 30 : (datum.b.count_label < 8 ? 15 : 12)"
        },
        {
          "type": "formula",
          "field": "tickLabel",
          "expr": "datum.a.label.length > datum.tickLimit ? slice(datum.a.label, 0, datum.tickLimit) + '...' : datum.a.label"
        },
        {
          "type": "formula",
          "field": "tickPos",
          "expr": "(datum.b.count_label < 4 || datum._id % 2 === 0) ? 20 : 40"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "table", "field": "a.label"},
      "points": true,
      "padding": 1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": [0, 100]
    }
  ],
  "marks": [
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 0, "scale": "y"},
          "stroke": {"value": "#ccd2d3"}
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 20, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 40, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 60, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 80, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "line",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "a.label"},
          "y": {"scale": "y", "field": "a.percentage"},
          "stroke": {"value": "#2f939c"},
          "strokeWidth": {"value": 2}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "a.label"},
          "y": {"scale": "y", "field": "a.percentage"},
          "fill": {"value": "#2f939c"},
          "size": {"value": 40}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "a.label"},
          "y": {"scale": "y", "value": 0},
          "text": {"template": "{{datum.tickLabel}}"},
          "dy": {"field": "tickPos"},
          "font": {"value": "Montserrat"},
          "fontWeight": {"value": "700"},
          "fontSize": {"value": 11},
          "fill": {"value": "#001d22"},
          "align": {"value": "center"}
        }
      }
    }
  ]
}
