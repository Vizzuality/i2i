{
  "width": <%= width %>,
  "height": <%= height %>,
  "padding": "strict",
  "data": [
    {
      "name": "table",
      "values": <%= data %>,
      "transform": [
        { "type": "joinaggregate", "as": ["count"] }
      ]
    }
  ],

  "config": {
    "legend": {
      "layout": {
        "bottom": {
          "anchor": "middle"
        }
      }
    }
  },

  "scales": [
    {
      "name": "yscale",
      "type": "linear",
      "domain": [0, 100],
      "range": "height",
      "round": true,
      "zero": false,
      "nice": true
    },
    {
      "name": "xscale",
      "type": "band",
      "domain": {"data": "table", "field": "category"},
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "gender"},
      "range": ["#2F939C", "#97C9CE"]
    }
  ],

  "legends": [
    {
      "stroke": "color",
      "title": "",
      "padding": 0,
      "orient": "bottom",
      "direction": "horizontal",
      "fill": "color",
      "labelColor": "#012026",
      "labelFontSize": 13,
      "columnPadding": 40,
      "encode": {
        "symbols": {
          "enter": {
            "size": { "value": 140 }
          }
        }
      }
    }
  ],

  "axes": [
    {
      "orient": "left", 
      "scale": "yscale",
      "titleFontSize": 13,
      "labelFontSize": 13,
      "labelColor": "#012026",
      "labelFontWeight": 500,
      "domain": false,
      "ticks": false,
      "grid": true,
      "gridDash": 8,
      "encode": {
        "labels": {
          "update": {
            "text": { "signal": "format(datum.value, '.0f') + '%'" }
          }
        }
      },
      "labelPadding": 10
    },
    {
      "orient": "bottom", 
      "scale": "xscale",  
      "tickSize": 0, 
      "zindex": 1,
      "titleFontSize": 13,
      "labelFontSize": 13,
      "labelColor": "#012026",
      "labelFontWeight": 500,
      "encode": {
        "labels": {
          "update": {
            "align": {
            "signal":
                "data('table')[0].count > 10 ? 'right' : 'center'"
            },
            "baseline": {
              "signal":  " data('table')[0].count > 10 ? 'middle' : 'top'"
            },
            "angle": {
              "signal": "data('table')[0].count > 10 ? -90 : 0"
            }
          }
        }
      },
      "domain": false,
      "labelPadding": 10
    }
  ],

  "marks": [
    {
      "type": "group",

      "from": {
        "facet": {
          "data": "table",
          "name": "facet",
          "groupby": "category"
        }
      },

      "encode": {
        "enter": {
          "x": { "scale": "xscale", "field": "category" }
        }
      },

      "signals": [
        { "name": "height", "update": "bandwidth('xscale')" }
      ],

      "scales": [
        {
          "name": "pos",
          "type": "band",
          "range": "height",
          "domain": { "data": "facet", "field": "gender" },
          "padding": 0.07
        }
      ],

      "marks": [
        {
          "name": "bars",
          "from": {"data": "facet"},
          "type": "rect",
          "encode": {
            "hover": {
              "opacity": { "value": 0.8 }
            },
            "update": {
              "opacity": { "value": 1 }
            },
            "enter": {
              "tooltip": {
                "signal": "{'Value': datum.percentage, 'Gender': datum.gender, 'Category': datum.category }"
              },
              "x": {"scale": "pos", "field": "gender"},
              "width": {"scale": "pos", "band": 1},
              "y": {"scale": "yscale", "field": "percentage"},
              "y2": {"scale": "yscale", "value": 0},
              "fill": {"scale": "color", "field": "gender"}
            }
          }
        }
      ]
    }
  ]
}