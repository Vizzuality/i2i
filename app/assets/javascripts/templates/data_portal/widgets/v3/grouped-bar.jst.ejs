{
  "width": <%= width %>,
  "height": <%= height %>,
  "padding": "strict",
  "data": [
    {
      "name": "table",
      "values": <%= data %>
    }
  ],

  "config": {
    "legend": {
      "layout": {
        "bottom": {
          "anchor": "middle"
        }
      }
    }
  },

  "legends": [
    {
      "stroke": "color",
      "title": "",
      "padding": 0,
      "orient": "bottom",
      "direction": "horizontal",
      "fill": "color",
      "labelColor": "#012026",
      "labelFontSize": 13,
      "columnPadding": 40,
      "encode": {
        "labels": {
        "update": {
          "text": {"signal": "upper(datum.value[0]) + substring(datum.value, 1, length(datum.value))"} 
        }
        },
        "symbols": {
          "enter": {
            "size": {"value": 140}
          }
        }
      }
    }
  ],

  "scales": [
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "table", "field": "value"},
      "range": "height",
      "round": true,
      "zero": true,
      "nice": true
    },
    {
      "name": "xscale",
      "type": "band",
      "domain": {"data": "table", "field": "category"},
      "range": "width",
      "padding": 0.2
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "position"},
      "range": ["#2F939C", "#97C9CE"]
    }
  ],

  "axes": [
    {
      "orient": "left", 
      "scale": "yscale",
      "titleFontSize": 13,
      "labelFontSize": 13,
      "labelColor": "#012026",
      "labelFontWeight": 500,
      "domain": false,
      "ticks": false,
      "grid": true,
      "gridDash": 8,
      "format": "%",
      "labelPadding": 10
    },
    {
      "orient": "bottom", 
      "scale": "xscale",  
      "tickSize": 0, 
      "labelPadding": 4, 
      "zindex": 1,
      "titleFontSize": 13,
      "labelFontSize": 13,
      "labelColor": "#012026",
      "labelFontWeight": 500,
      "domain": false,
      "labelPadding": 10
    }
  ],

  "marks": [
    {
      "type": "group",

      "from": {
        "facet": {
          "data": "table",
          "name": "facet",
          "groupby": "category"
        }
      },

      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "category"}
        }
      },

      "signals": [
        {"name": "height", "update": "bandwidth('xscale')"}
      ],

      "scales": [
        {
          "name": "pos",
          "type": "band",
          "range": "height",
          "domain": {"data": "facet", "field": "position"},
          "padding": 0.07
        }
      ],

      "marks": [
        {
          "name": "bars",
          "from": {"data": "facet"},
          "type": "rect",
          "encode": {
            "enter": {
              "x": {"scale": "pos", "field": "position"},
              "width": {"scale": "pos", "band": 1},
              "y": {"scale": "yscale", "field": "value"},
              "y2": {"scale": "yscale", "value": 0},
              "fill": {"scale": "color", "field": "position"}
            }
          }
        }
      ]
    }
  ]
}