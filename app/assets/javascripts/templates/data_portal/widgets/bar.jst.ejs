{
  "width": <%= width %>,
  "height": <%= height %>,
  "padding": "strict",
  "data": [
    {
      "name": "original",
      "values": <%= data %>
    },
    {
      "name": "count",
      "source": "original",
      "transform": [
        {"type": "aggregate", "summarize": {"label": "count"}}
      ]
    },
    {
      "name": "table",
      "source": "original",
      "transform": [
        {"type": "cross", "with": "count"},
        {"type": "sort", "by": "-a.percentage"},
        {"type": "rank", "field": "-column"},
        {
          "type": "formula",
          "field": "tickLimit",
          "expr": "datum.b.count_label < 6 ? 30 : (datum.b.count_label < 8 ? 15 : 12)"
        },
        {
          "type": "formula",
          "field": "tickLabel",
          "expr": "datum.a.label.length > datum.tickLimit ? slice(datum.a.label, 0, datum.tickLimit) + '...' : datum.a.label"
        },
        {
          "type": "formula",
          "field": "tickPos",
          "expr": "(datum.b.count_label < 4 || datum.rank % 2 === 0) ? 20 : 40"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {
        "data": "table",
        "field": "a.label",
        "sort": {
          "field": "rank",
          "op": "mean"
        }
      },
      "points": true,
      "padding": 1
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": [0, 100]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "rank",
        "sort": {
          "field": "rank",
          "op": "mean"
        }
      },
      "range": ["#2f939c","#97c9ce","#001d22","#f9d031","#f95e31", "#FCAE98", "#633AE8", "#E4D081", "#00D9C6", "#B9A86C", "#7B0051", "#B685C9", "#076270", "#8ADF70"]
    }
  ],
  "marks": [
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 0, "scale": "y"},
          "stroke": {"value": "#ccd2d3"}
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 20, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 40, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 60, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rule",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "x2": {"field": {"group": "width"}},
          "y": {"value": 80, "scale": "y"},
          "stroke": {"value": "#ccd2d3"},
          "strokeDash": {"value": [7, 10] }
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "a.label", "offset": -10},
          "width": {"value": 20},
          "y": {"scale": "y", "field": "a.percentage"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"field": "rank", "scale": "color"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "a.label"},
          "y": {"scale": "y", "value": 0},
          "text": {"template": "{{datum.tickLabel}}"},
          "dy": {"field": "tickPos"},
          "font": {"value": "Montserrat"},
          "fontWeight": {"value": "700"},
          "fontSize": {"value": 11},
          "fill": {"value": "#001d22"},
          "align": {"value": "center"}
        }
      }
    }
  ]
}
